GLOBAL DEF ROS_Info(msg[]: IN)
    CHAR msg[]
    MsgNotify(msg[], "INFO")
END

GLOBAL DEF ROS_Debug(msg[]: IN)
    CHAR msg[]
    IF DEBUG_ON THEN
        MsgNotify(msg[], "DEBUG")
    ENDIF
END

GLOBAL DEF ROS_Error(msg[]: IN)
    CHAR msg[]
    MsgNotify(msg[], "ERROR")
END

GLOBAL DEF ROS_Info1String(msg[]: IN, str[]: IN)
    CHAR msg[]
    CHAR str[]
    MsgNotify(msg[], "INFO",, str[])
END

GLOBAL DEF ROS_Debug1String(msg[]: IN, str[]: IN)
    CHAR msg[]
    CHAR str[]
    IF DEBUG_ON THEN
        MsgNotify(msg[], "DEBUG",, str[])
    ENDIF
END

GLOBAL DEF ROS_Error1String(msg[]: IN, str[]: IN)
    CHAR msg[]
    CHAR str[]
    MsgNotify(msg[], "ERROR",, str[])
END

GLOBAL DEF ROS_Debug2Strings(msg[]: IN, str1[]: IN, str2[]: IN)
    CHAR msg[]
    CHAR str1[]
    CHAR str2[]
    IF DEBUG_ON THEN
        MsgNotifyTextPar(msg[], "DEBUG", 0, str1[], str2[])
    ENDIF
END
